<Window x:Class="SonicRacingSaveManager.Views.AccountSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Select Steam Account - Sonic Racing CrossWorlds"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0"
                                 Mode="PrimaryMid"
                                 Padding="20"
                                 materialDesign:ElevationAssist.Elevation="Dp4">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <materialDesign:PackIcon Kind="AccountCircle"
                                           Width="40"
                                           Height="40"
                                           VerticalAlignment="Center"
                                           Margin="0,0,15,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Select Your Steam Account"
                                 Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                        <TextBlock Text="Choose which account's saves you want to manage"
                                 Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                 Opacity="0.8"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Account List -->
        <materialDesign:Card Grid.Row="1" Margin="20" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListBox Grid.Row="0"
                       x:Name="AccountListBox"
                       ItemsSource="{Binding Accounts}"
                       SelectedItem="{Binding SelectedAccount}"
                       MouseDoubleClick="AccountListBox_MouseDoubleClick"
                       Margin="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="15,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <materialDesign:PackIcon Kind="Account"
                                                       Width="48"
                                                       Height="48"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,20,0"
                                                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding ShortDisplay}"
                                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                             FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding AccountId}"
                                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                                             Opacity="0.7"
                                             Margin="0,2,0,0"/>
                                    <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                             Opacity="0.6"
                                             Margin="0,4,0,0">
                                        <Run Text="{Binding FileCount, Mode=OneWay}"/>
                                        <Run Text="save files"/>
                                    </TextBlock>
                                </StackPanel>

                                <materialDesign:PackIcon Grid.Column="2"
                                                       Kind="ChevronRight"
                                                       Width="32"
                                                       Height="32"
                                                       VerticalAlignment="Center"
                                                       Opacity="0.5"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <TextBlock Grid.Row="0"
                         Text="No Steam accounts with save files found"
                         Style="{StaticResource MaterialDesignBody1TextBlock}"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Opacity="0.6"
                         Visibility="{Binding HasNoAccounts, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <Button Grid.Row="1"
                      Command="{Binding RefreshCommand}"
                      Style="{StaticResource MaterialDesignOutlinedButton}"
                      HorizontalAlignment="Left"
                      Margin="15,10,15,15">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Refresh" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </materialDesign:Card>

        <!-- Action Buttons -->
        <materialDesign:Card Grid.Row="2" Margin="20,0,20,20" Padding="20">
            <StackPanel>
                <Button Command="{Binding SelectAccountCommand}"
                      Style="{StaticResource MaterialDesignRaisedButton}"
                      Height="50"
                      Margin="0,0,0,10"
                      IsEnabled="{Binding HasSelectedAccount}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Check"
                                               Width="24"
                                               Height="24"
                                               VerticalAlignment="Center"
                                               Margin="0,0,10,0"/>
                        <TextBlock Text="Continue with Selected Account"
                                 VerticalAlignment="Center"
                                 FontSize="16"
                                 FontWeight="Medium"/>
                    </StackPanel>
                </Button>

                <TextBlock Text="Tip: Double-click an account to quickly select it"
                         Style="{StaticResource MaterialDesignCaptionTextBlock}"
                         HorizontalAlignment="Center"
                         Opacity="0.6"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>

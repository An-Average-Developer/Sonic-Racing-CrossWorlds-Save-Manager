<Window x:Class="SonicRacingSaveManager.Views.ValueAppliedDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Value Applied"
        Height="300"
        Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0"
                                 Mode="PrimaryMid"
                                 Padding="16"
                                 materialDesign:ElevationAssist.Elevation="Dp4">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="CheckCircle"
                                       Width="32"
                                       Height="32"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                <TextBlock Text="Value Applied Successfully!"
                         Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                         VerticalAlignment="Center"/>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Content -->
        <materialDesign:Card Grid.Row="1" Margin="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="FOR THE CHANGES TO TAKE EFFECT,"
                         FontSize="28"
                         FontWeight="Bold"
                         Foreground="Red"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,5"/>
                <TextBlock Text="SPEND TICKETS ON ANYTHING"
                         FontSize="28"
                         FontWeight="Bold"
                         Foreground="Red"
                         HorizontalAlignment="Center"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Button -->
        <materialDesign:Card Grid.Row="2" Margin="20,0,20,20">
            <Button Content="OK"
                  Click="OkButton_Click"
                  Style="{StaticResource MaterialDesignRaisedButton}"
                  Height="40"
                  Width="120"
                  HorizontalAlignment="Center"
                  Background="#4CAF50"/>
        </materialDesign:Card>
    </Grid>
</Window>

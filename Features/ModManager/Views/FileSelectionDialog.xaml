<Window x:Class="SonicRacingSaveManager.Features.ModManager.Views.FileSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Select Files to Download"
        Height="500"
        Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0"
                                 Mode="PrimaryMid"
                                 Padding="16"
                                 materialDesign:ElevationAssist.Elevation="Dp4">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="FileMultiple"
                                       Width="32"
                                       Height="32"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Select Files to Download"
                             Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                    <TextBlock Text="{Binding ModName}"
                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                             Opacity="0.8"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Content -->
        <materialDesign:Card Grid.Row="1" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Instructions -->
                <StackPanel Grid.Row="0" Margin="16,16,16,10">
                    <TextBlock Text="This mod has multiple files available for download. Select which files you want to install:"
                             TextWrapping="Wrap"
                             Opacity="0.7"
                             Margin="0,0,0,10"/>

                    <!-- Select/Deselect All Buttons -->
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <Button Content="Select All"
                              Command="{Binding SelectAllCommand}"
                              Style="{StaticResource MaterialDesignFlatButton}"
                              Height="28"
                              Padding="10,0"
                              Margin="0,0,5,0"/>
                        <Button Content="Deselect All"
                              Command="{Binding DeselectAllCommand}"
                              Style="{StaticResource MaterialDesignFlatButton}"
                              Height="28"
                              Padding="10,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Files List -->
                <Border Grid.Row="1"
                       BorderBrush="{DynamicResource MaterialDesignDivider}"
                       BorderThickness="0,1,0,0"
                       Margin="0,5,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding AvailableFiles}" Margin="16">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}"
                                           BorderThickness="0,0,0,1"
                                           Padding="10"
                                           Margin="0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Checkbox -->
                                            <CheckBox Grid.Column="0"
                                                    IsChecked="{Binding IsSelected}"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,15,0"/>

                                            <!-- File Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding FileName}"
                                                         FontWeight="Medium"
                                                         FontSize="14"
                                                         TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding FileSizeFormatted}"
                                                         FontSize="12"
                                                         Opacity="0.6"
                                                         Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <!-- File Icon -->
                                            <materialDesign:PackIcon Grid.Column="2"
                                                                   Kind="File"
                                                                   Width="24"
                                                                   Height="24"
                                                                   VerticalAlignment="Center"
                                                                   Opacity="0.4"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>
        </materialDesign:Card>

        <!-- Buttons -->
        <materialDesign:Card Grid.Row="2" Margin="20,0,20,20">
            <StackPanel Orientation="Horizontal"
                      HorizontalAlignment="Right">
                <Button Content="Cancel"
                      Command="{Binding CancelCommand}"
                      Style="{StaticResource MaterialDesignOutlinedButton}"
                      Height="40"
                      Margin="0,0,10,0"
                      Padding="25,0"/>

                <Button Content="Continue"
                      Command="{Binding ConfirmCommand}"
                      Style="{StaticResource MaterialDesignRaisedButton}"
                      Height="40"
                      Padding="25,0"
                      Background="#4CAF50"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>

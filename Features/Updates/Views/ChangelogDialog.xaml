<Window x:Class="SonicRacingSaveManager.Features.Updates.Views.ChangelogDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Update Available"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0"
                                 Mode="PrimaryMid"
                                 Padding="16"
                                 materialDesign:ElevationAssist.Elevation="Dp4">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="CloudDownload"
                                       Width="32"
                                       Height="32"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Update Available!"
                             Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                    <TextBlock Text="{Binding VersionInfo}"
                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                             Opacity="0.8"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Changelog Content -->
        <materialDesign:Card Grid.Row="1" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                         Text="What's New:"
                         Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                         Margin="0,0,0,15"/>

                <Border Grid.Row="1"
                      Background="{DynamicResource MaterialDesignDivider}"
                      CornerRadius="8"
                      Padding="15">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBlock Text="{Binding Changelog}"
                                 TextWrapping="Wrap"
                                 FontFamily="Consolas"
                                 FontSize="13"
                                 LineHeight="22"/>
                    </ScrollViewer>
                </Border>
            </Grid>
        </materialDesign:Card>

        <!-- Buttons -->
        <materialDesign:Card Grid.Row="2" Margin="20,0,20,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- File info on the left -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Information"
                                           Width="16"
                                           Height="16"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"
                                           Opacity="0.7"/>
                    <TextBlock Text="{Binding FileSizeText}"
                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                             VerticalAlignment="Center"
                             Opacity="0.7"/>
                </StackPanel>

                <!-- Action buttons on the right -->
                <Button Grid.Column="1"
                      Content="Not Now"
                      Command="{Binding CancelCommand}"
                      Style="{StaticResource MaterialDesignOutlinedButton}"
                      Height="40"
                      Margin="0,0,10,0"
                      Padding="25,0"/>

                <Button Grid.Column="2"
                      Command="{Binding UpdateCommand}"
                      Style="{StaticResource MaterialDesignRaisedButton}"
                      Height="40"
                      Padding="25,0"
                      Background="#4CAF50">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Download"
                                                   Width="20"
                                                   Height="20"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Download &amp; Update" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
